{% extends "base.html.twig" %}

{% block title %}
   {{parent()}} | Books
  
{% endblock %}

{% block stylesheet %}
 <link rel="stylesheet" type="text/css" href="{{asset('css/home.css')}}">
 {{parent()}}

{% endblock %}


{% block body %}
   <div class="container">
       <div class="row flex">
           {% for book in books %}
               <div class="col-3">
                  <div class="card" style="margin-top: 50px;">
                     <div class="card-body">
                     {% if book.image is not null %}
                         <img src="{{book.image.url}}" alt="{{book.image.alt}}" width=200px height=400px;>
                         {% endif %}
                         <h4 class="card-title" style=" padding-top: 6px; color:black;"> {{book.title}}</h4>
                        <p class="card-text"> {{book.author}} <br> {{book.price}} $ <br> "{{book.synopsis}}"</p>
                    </div>
                 </div>
             </div>
{% endfor %}
       </div>
    </div>


{% endblock %}


